<Page x:Class="ComputerShop.ShowUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowUser">

    <Grid>
        <DataGrid x:Name="userDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="20"
                  Width="700"
                  Height="300"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Azonosító" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="Jelszó" Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Teljesnév" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Dátum" Binding="{Binding RegDate}"/>

                <DataGridTemplateColumn Header="Töröl">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                x:Name="userDeleteButton"
                                Content="X"
                                Foreground="White"
                                Background="Red"
                                Click="userDeleteButton_Click"
                                Tag="{Binding}"
                                />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Módosít">
                <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                            <Button
                             x:Name="userUpdteButton"
                             Content="M"
                             Foreground="Black"
                             Background="Yellow"
                             Click="userUpdteButton_Click"
                             Tag="{Binding}"
                             />
                </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
