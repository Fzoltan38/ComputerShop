<Page x:Class="ComputerShop.RegisterForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterForm">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                VerticalAlignment="Center"
                Text="Felhasználónév:"
                Margin="0,0,8,0"
                />
            <TextBox x:Name="userNameTextBox" 
              Grid.Row="0" 
              Grid.Column="1"
              MinWidth="100" Height="25"
              />

            <TextBlock Grid.Row="1" Grid.Column="0"
                VerticalAlignment="Center"
                Text="Jelszó:"
                 Margin="0,0,8,0"
             />
            <PasswordBox x:Name="userPasswordTextBox" Grid.Row="1" Grid.Column="1"
                    MinWidth="100" Height="25"/>

            <TextBlock Grid.Row="2" Grid.Column="0"
                      VerticalAlignment="Center"
                       Text="Teljesnév:"
                        Margin="0,0,8,0"
                        />
            <TextBox x:Name="userFullNameTextBox" 
                        Grid.Row="2" 
                        Grid.Column="1"
                        MinWidth="100" Height="25"
                        />
            <TextBlock Grid.Row="3" Grid.Column="0"
            VerticalAlignment="Center"
             Text="Email:"
              Margin="0,0,8,0"
              />
            <TextBox x:Name="userEmailTextBox" 
              Grid.Row="3" 
              Grid.Column="1"
              MinWidth="100" Height="25"
              />

            <StackPanel Grid.Row="4" Grid.Column="1">

                <Button x:Name="registerButton"
                 HorizontalAlignment="Right"
                 Margin="0,12,0,0"
                 Content="Regisztrálás"
                 MinWidth="100"
                 Height="30"
                 FontWeight="Bold" Width="122"
                 Click="registerButton_Click"
                 />
            </StackPanel>

        </Grid>
    </Grid>
</Page>
